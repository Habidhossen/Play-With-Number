<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@drawable/app_bg_shape_1"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/lobster_regular"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextId"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/edittext_bg_shape"
                android:fontFamily="@font/lobster_regular"
                android:textSize="15sp"
                android:letterSpacing="0.05"
                android:textColor="#f9f9f9"
                android:textColorHint="#f9f9f9"
                android:hint="Enter a number (1-10)"/>

            <Button
                android:id="@+id/checkBtnId"
                android:background="@drawable/button_bg_shape"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:textColor="#1B1B1B"
                android:text="Play"
                android:textSize="16sp"
                android:fontFamily="@font/lobster_regular"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/result1TextViewId"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:textSize="22sp"
            android:textColor="#020101"
            android:fontFamily="@font/lobster_regular"/>

        <TextView
            android:id="@+id/result2TextViewId"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.05"
            android:textSize="16sp"
            android:textColor="#020101"
            android:fontFamily="@font/lobster_regular"/>

        <ImageView
            android:id="@+id/imageViewId"
            android:layout_marginTop="20dp"
            android:layout_width="110dp"
            android:layout_height="110dp"/>


    </LinearLayout>

</LinearLayout>